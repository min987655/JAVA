package sms;

import java.awt.*;
import java.awt.event.*;

import javax.swing.*;


public class MySms extends JFrame {
	
	private JLabel jl1, jl2;
	private JTextField jt1, jt2;
	private JButton jb;
	private Font f1, f2;

	public MySms() {
		init();
		
		setTitle("SMS");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		Container c = getContentPane();
		c.setLayout(new FlowLayout(FlowLayout.CENTER, 0, 7));
				
		jl1.setFont(f1);
		jl2.setFont(f1);
		jt1.setFont(f2);
		jt2.setFont(f2);
		jb.setFont(f1);
		
		c.add(jl1);
		c.add(jt1);
		c.add(jl2);
		c.add(jt2);
		c.add(jb);
		
		jb.addActionListener(new ActionListener() {
			
			@Override
			public void actionPerformed(ActionEvent e) {
				String phone = jt1.getText();
				String msg = jt2.getText();
				ExampleSend.sms(phone, msg);
			}
		});
		
		setSize(220, 230);
		setLocationRelativeTo(null);
		setVisible(true);
	}
	
	
	private void init() {
		f1 = new Font("SansSerif", Font.BOLD, 14);
		f2 = new Font("SansSerif", Font.PLAIN, 14);
		jl1 = new JLabel("전화번호");
		jt1 = new JTextField(15);
		jl2 = new JLabel("메세지");
		jt2 = new JTextField(15);
		jb = new JButton("전송");
	}
	
	public static void main(String[] args) {
		new MySms();
	}

}
